{
    "version": "independent",
    "npmClient": "yarn",
    "packages": ["packages/*"],
    "useWorkspaces": true,
    "command": {
        "publish": {
            "allowBranch": "main",
            "message": "Published new versions"
        }
    },
    "local": {
        "public": "<%= public %>",
        "repo": "<%= repo %>",
        "scope": "<%= scope %>"
    }
}
